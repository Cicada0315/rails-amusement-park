<h1> Sign Up </h1>
<%#= FORM IF WE PASS IT A USER. Its automatically going to post users_path %>
<%= form_for @user do |f|%>
    <div class="form-group">
    <%= f.label :name, "Name"%><br>
    <%= f.text_field :name %><br>
    </div>

    <div class="form-group">
    <%= f.label :height, "Height (in inches)" %><br>
    <%= f.number_field :height %><br>
    </div>

    <div class="form-group">
    <%= f.label :happiness, "How happy are you? (1-5 scale)" %><br>
    <%= f.number_field :happiness, in: 1...6 %><br>
    </div>

    <div class="form-group">
    <%= f.label :nausea, "How nauseous are you? (1-5 scale)" %><br>
    <%= f.number_field :nausea, in: 1...6 %><br>
    </div>

    <div class="form-group">
    <%= f.label :tickets, "How many dollars are in your pocket?" %><br>
    <%= f.number_field :tickets %><br><br>
    </div>

    <div class="form-group">
    <%= f.label :admin,"Check box if you are a theme park owner" %>
    <%= f.check_box :admin %> <br><br>
    </div>

    <div class="form-group">
    <%= f.label :password %><br>
    <%= f.password_field :password %><br>
    </div>

    <div class="actions">
    <%= f.submit "Create User" %>
    </div>
<% end %>